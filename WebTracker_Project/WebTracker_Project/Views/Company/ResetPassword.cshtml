            function Validate() {
                var data = document.getElementById("txtEmailID").value;
                if (data == "") {
                    alert("Please enter your email id.");
                    return false;
                } else {
                    return true;
                }
            }
        </script>*@
    <script>
            function clearField(ele) {
                ele.value = '';
                var spans = $('.spanclass');
                spans.text('');


            }
    </script>

    @using (Html.BeginForm("ResetPassword", "Company"))
    {

        <br />
        <br />
        <br />
        <div class="wrapper-page">

            <div class="card-box">
                <div class="panel-heading">
                    <h4 class="text-center"> <strong class="text-custom">Reset Password</strong></h4>
                </div>


                <div class="p-20">

                    <div class="form-group ">
                        <div class="row">
                            <div class="col-12">
                                @Html.Password("NewPassword", "", new { @id = "txtNewPassword", onfocus = "clearField (this)", @class = "form-control", @placeholder = "New Password" })
                            </div>
                            <br>
                            <br>
                            <br />
                            <div class="col-12">
                                @Html.Password("ConfirmPassword", "", new { @id = "txtCPassword", onfocus = "clearField (this)", @class = "form-control", @placeholder = "Confirm Password" })
                            </div>


                            @Html.HiddenFor(a => a.ResetCode)

                            <br />
                            <br />
                            <br />
                            <div class="col-12 text-center">
                                @if (ViewBag.Msg == 1)
                                {
                                    <span class="spanclass" style="color:green;"><b>New Password Updated Successfully.</b></span>
                                }
                                else if (ViewBag.Msg == 0)
                                {
                                    <span class="spanclass" style="color:red;"><b>New Password and Confirm Password does no match!</b></span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-40">
                        <div class="col-12">
                            <input value="Reset Password" class="btn btn-pink btn-block  text-uppercase "
                                   type="submit" onclick="javascript: return Validate();" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <p>
                                <a href="@Url.Action("Login","Company")" class="text-primary m-l-5">Back To Login? </a>
                            </p>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    }

</head>
