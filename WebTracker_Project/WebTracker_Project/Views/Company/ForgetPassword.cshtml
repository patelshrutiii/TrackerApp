@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <title></title>

    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/style.css" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery.min.js"></script>

    <script src="~/js/modernizr.min.js"></script>


    <script>
        function Validate() {
            var data = document.getElementById("txtEmailID").value;
            if (data == "") {
                alert("Please enter your email id.");
                return false;
            } else {
                return true;
            }
        }
        function clearField(ele) {
            ele.value = '';
            var spans = $('.spanclass');
            spans.text('');


        }
    </script>
</head>
@using (Html.BeginForm("ForgetPassword", "Company"))
{

    <br />
    <br />
    <br />
    <div class="wrapper-page">

        <div class="card-box">
            <div class="panel-heading">
                <h4 class="text-center"> <strong class="text-custom">Forgot Password</strong></h4>
            </div>


            <div class="p-20">

                <div class="form-group ">
                    <div class="row">
                        <div class="col-12">
                            @Html.TextBox("EmailId", "", new { @id = "txtEmailID", onfocus = "clearField (this)", @class = "form-control", @placeholder = "Email" })
                        </div>
                        <br />
                        <br />

                        <div class="col-12">
                            @if (ViewBag.Message == 1)
                            {
                                <span class="spanclass" style="color:green;"><b>Please check your email for account login detail.</b></span>
                            }
                            else if (ViewBag.Message == 0)
                            {
                                <span class="spanclass" style="color:red;"><b>Please provide a valid register email id.</b></span>
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group text-center m-t-40">
                    <div class="col-12">
                        <input value="Send Verification" class="btn btn-pink btn-block  text-uppercase "
                               type="submit" onclick="javascript: return Validate();" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 text-center">
                        <p>
                            <a href="@Url.Action("Login","Company")" class="text-primary m-l-5">Back To Login? </a>
                        </p>

                    </div>
                </div>


            </div>
        </div>
    </div>
}


