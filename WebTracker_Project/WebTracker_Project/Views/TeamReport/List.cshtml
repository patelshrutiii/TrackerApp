@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<head>
    <title>TimeSheet</title>
    <link href="~/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="~/plugins/clockpicker/css/bootstrap-clockpicker.min.css" rel="stylesheet">
    <link href="~/CSS/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/CSS/style.css" rel="stylesheet" type="text/css" />
    <script src="~/js/modernizr.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>


    <!-- DevExtreme theme -->
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/21.1.6/css/dx.light.css">

    <!-- DevExtreme library -->
    @*<script type="text/javascript" src="https://cdn3.devexpress.com/jslib/21.1.6/js/dx.all.js"></script>*@


    <style>
        .gobtn {
            border: none !important;
            height: 41px;
            color: white;
            width: 100px;
            background-color: #7EB900;
            font-size: 20px;
        }

        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .button2 {
            background-color: white;
            color: black;
            width: 170px;
            height: 55px;
            /*border: 2px solid #008CBA;*/
            border: none;
        }

            .button2:hover {
                background-color: #008CBA;
                color: white;
            }
    </style>
</head>
<body>

    <div ng-controller="TeamReportController" ng-init="TeamReportSP()">
        <br />
        <div class="container">
            <div class="card-box" style="background-color: #EBEFF2 !important; box-shadow: none !important; padding:0px!important;">
                <h1 style="  color: black; font-size: 36px;padding-left:8px; ">User Reports</h1>
            </div>
        </div>      <!--first container div-->
        <br />

        <div class="container">


            <div>
                <div class="card-box">
                    <div class="row">
                        <div class="col-md-3">
                            <input type="text" class="form-control  mt-add-input" style="background: #f6f6f6;font-size:18px;" ng-model="userName" readonly />
                        </div>
                        <div class="col-md-1"></div>
                        <div class="col-md-3">
                            <div class="d-flex">
                                <input type="date" style="background: #f6f6f6; border: none; height: 40px; padding: 5px;" ng-model="Todate" />&nbsp;&nbsp;
                                <i class="fa fa-calendar" style="font-size:30px;"></i>&nbsp;&nbsp;
                                <input type="date" style="background: #f6f6f6; border: none; padding: 5px; " ng-model="fromdate" />
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                        <div class="col-md-2">
                            <button class="gobtn" ng-click="TeamReportSP()">Go</button>
                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div style="background-color: #EBEFF2!important;" id="gridContainer" dx-data-grid="dataGridOptions"></div>
                    </div>
                </div>
            </div><!--User Report Div-->
        </div> <!-- end  container -->
    </div>  <!--ng-controller div-->

    <script src="~/js/jquery.min.js"></script>
</body>
@section script {
    <script src="~/Scripts/Services/TeamReportService.js"></script>
    <script src="~/Scripts/AngularController/TeamReportCtrl.js"></script>
    <script src="~/plugins/moment/moment.js"></script>
    <script src="~/plugins/timepicker/bootstrap-timepicker.js"></script>
    <script src="~/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/plugins/clockpicker/js/bootstrap-clockpicker.min.js"></script>
    <script src="~/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/pages/jquery.form-pickers.init.js"></script>
}
